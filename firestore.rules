rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is accessing their own data
    function isUserOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Allow users to read and write their own data
    match /users/{userId} {
      allow read, write: if isUserOwner(userId);
      
      // Allow users to manage their own configurations
      match /configs/{configId} {
        allow read, write: if isUserOwner(userId);
      }
    }
    
    // Allow access to all collections for authenticated users
    match /{collectionId}/{documentId} {
      allow read: if isAuthenticated() && 
        // Exclude sensitive collections
        !(collectionId in ['users', 'configs', '_internal', 'system']);
    }
    
    // Allow listing collections
    match /{path=**} {
      allow list: if isAuthenticated();
    }
  }
} 