{
  "info": {
    "_postman_id": "random-uuid",
    "name": "Firebase Browser API",
    "description": "Collection for testing Firebase Browser backend endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3001/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["health"]
        }
      },
      "response": []
    },
    {
      "name": "Get Collections",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"serviceAccount\": {\n    \"type\": \"service_account\",\n    \"project_id\": \"your-project-id\",\n    \"private_key_id\": \"your-private-key-id\",\n    \"private_key\": \"your-private-key\",\n    \"client_email\": \"your-client-email\",\n    \"client_id\": \"your-client-id\",\n    \"auth_uri\": \"https://accounts.google.com/o/oauth2/auth\",\n    \"token_uri\": \"https://oauth2.googleapis.com/token\",\n    \"auth_provider_x509_cert_url\": \"https://www.googleapis.com/oauth2/v1/certs\",\n    \"client_x509_cert_url\": \"your-cert-url\"\n  }\n}"
        },
        "url": {
          "raw": "http://localhost:3001/api/collections",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "collections"]
        }
      },
      "response": []
    },
    {
      "name": "Cleanup Firebase App",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "http://localhost:3001/api/cleanup/{{projectId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "cleanup", "{{projectId}}"]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "projectId",
      "value": "your-project-id"
    }
  ]
} 